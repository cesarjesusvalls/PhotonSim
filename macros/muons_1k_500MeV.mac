# Macro for 1000 muon events at 500 MeV

# Set output filename before initialization
/output/filename muons_500MeV_optical_photons.root

/run/initialize

# Disable muon decay to focus on electromagnetic processes
/process/inactivate Decay mu+
/process/inactivate Decay mu-

# Set up primary particle
/gun/particle mu-
/gun/energy 500 MeV
/gun/position 0 0 0 m
/gun/direction 0 0 1

# Run 1000 events
/run/beamOn 1000