# Test macro for pi- validation
# 20 events at 1 GeV with random direction

# Set output filename
/output/filename test_pi_minus.root

/run/initialize

# Enable individual photon storage (needed for LUCiD)
/photon/storeIndividual true
/edep/storeIndividual false

# Primary particle configuration
/gun/numberOfPrimaries 1
/gun/particle pi-
/gun/energy 1000 MeV
/gun/position 0 0 0 m
/gun/randomDirection true

# Run events
/run/beamOn 20
